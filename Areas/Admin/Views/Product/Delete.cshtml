@model NguyenNhan_2179_tuan3.Models.Product

@{
    ViewData["Title"] = "Xóa Sản Phẩm";
}

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0"><i class="bi bi-trash me-2"></i>Xóa Sản Phẩm</h4>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="DeleteConfirmed" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="alert alert-warning" role="alert">
                                Bạn có chắc chắn muốn xóa sản phẩm <strong>@Model.Name</strong>? Hành động này không thể hoàn tác.
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Hình Ảnh Đại Diện</label>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="Ảnh đại diện" style="max-width:150px; max-height:150px;" class="rounded border" />
                                }
                                else
                                {
                                    <div class="text-muted fst-italic">Chưa có ảnh đại diện</div>
                                }
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Ảnh Phụ</label>
                                @if (Model.Images != null && Model.Images.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var img in Model.Images)
                                        {
                                            <img src="@img.Url" alt="Ảnh phụ" style="width:90px; height:90px; object-fit:cover;" class="rounded border" />
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted fst-italic">Không có ảnh phụ</div>
                                }
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <button type="submit" class="btn btn-danger px-4"><i class="bi bi-trash me-2"></i>Xóa Sản Phẩm</button>
                                <a asp-area="Admin" asp-controller="Product" asp-action="IndexList" class="btn btn-outline-secondary px-4"><i class="bi bi-arrow-left me-2"></i>Quay Lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>