@model NguyenNhan_2179_tuan3.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2 class="mb-3">Xóa sản phẩm</h2>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <p>Bạn có chắc chắn muốn xóa sản phẩm: <strong>@Model.Name</strong>?</p>
    </div>

    <div class="mb-3">
        <label>Hình ảnh đại diện:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Ảnh đại diện" style="max-width:120px;max-height:120px;" class="img-thumbnail" />
        }
        else
        {
            <span>Chưa có ảnh đại diện</span>
        }
    </div>

    <div class="mb-3">
        <label>Ảnh phụ:</label><br />
        @if (Model.Images != null && Model.Images.Any())
        {
            <div class="d-flex flex-wrap gap-2">
                @foreach (var img in Model.Images)
                {
                    <img src="@img.Url" alt="Ảnh phụ" style="width:70px;height:70px;object-fit:cover;" class="img-thumbnail" />
                }
            </div>
        }
        else
        {
            <span>Không có ảnh phụ.</span>
        }
    </div>

    <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-area="Admin" asp-controller="Product" asp-action="IndexList" class="btn btn-secondary">Hủy</a>
    </div>
</form>