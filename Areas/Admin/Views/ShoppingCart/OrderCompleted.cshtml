@model int

@{
    ViewData["Title"] = "Order Completed";
}

<div class="container mt-4">
    <h2 class="text-success">@ViewData["Title"]</h2>
    <div class="alert alert-success" role="alert">
        <p>Your order with ID <strong>@Model</strong> has been placed successfully.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
    </div>
</div>
