@model int

@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container mt-4">
    <h2 class="text-success">@ViewData["Title"]</h2>
    <div class="alert alert-success" role="alert">
        <p>Đơn hàng của bạn với mã <strong>@Model</strong> đã được đặt thành công.</p>
        <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-primary mt-3">Xem giỏ hàng</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3 ms-2">Về trang chủ</a>
    </div>
</div>